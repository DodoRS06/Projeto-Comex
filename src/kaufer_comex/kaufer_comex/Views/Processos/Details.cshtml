                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Modal)
                </dd>
            </div>

            <div class="col-md-4">
                <dt>
                    @Html.DisplayNameFor(model => model.ImportadorId)
                </dt>
                <dd>
                    @ViewBag.importador
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
