@model kaufer_comex.Models.DetalhesProcessoView

@{
    ViewData["Title"] = "Detalhes";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert" align="center">
        @TempData["MensagemErro"]
    </div>
}

<div>
    <br />
    <h4>Detalhes do Processo</h4>
    <hr />
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a asp-controller="DCEs" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-dark mb-2" style="width: 110px"> DCE</a>
    <a asp-controller="Despachos" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-dark mb-2" style="width: 110px">Despacho</a>
    <a asp-controller="Documentos" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-dark mb-2" style="width: 110px">Documento</a>
    <a asp-controller="Valores" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-dark mb-2" style="width: 110px">Valores</a>
    </div>
    <div class="card mb-3">
        <div class="card-header">Processo:</div>
        <dl class="card-body row">
            <div class="col-md-4">
                <dt>
                    @Html.DisplayNameFor(model => model.CodProcessoExportacao)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CodProcessoExportacao)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    @Html.DisplayNameFor(model => model.UsuarioId)
                </dt>
                <dd>
                    @ViewBag.responsavel
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
