@model kaufer_comex.Models.CadastroDespesa

@{
	ViewData["Title"] = "Excluir";
}


<div>
	@if (TempData["MensagemErro"] != null)
	{
		<div class="alert alert-danger" role="alert" align="center">
			@TempData["MensagemErro"]
		</div>
	}
	<h4>Você tem certeza que deseja excluir o despacho:  @Html.DisplayFor(model => model.Id) ?</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.NomeDespesa)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.NomeDespesa)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Excluir" class="btn " style=" background-color: #82323b; color: #FFF; width: 100px" />
		<a asp-action="Index" class="btn btn-dark" style="width: 100px">Voltar</a>
	</form>
</div>
