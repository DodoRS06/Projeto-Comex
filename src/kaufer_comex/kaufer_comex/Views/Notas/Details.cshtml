<h3>Itens da Nota</h3>
<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantidade</th>
            <th>Valor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.NotaItem)
        {
            <tr>
                <td>@item.Item.DescricaoProduto</td>
                <td>@item.Quantidade</td>
                <td>@item.Valor</td>
            </tr>
        }
    </tbody>
</table>
