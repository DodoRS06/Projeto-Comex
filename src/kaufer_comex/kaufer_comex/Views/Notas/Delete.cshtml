@model kaufer_comex.Models.Nota

@{
    ViewData["Title"] = "Excluir";
}


@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert" align="center">
        @TempData["MensagemErro"]
    </div>
}

<div>
    <h4>Você tem certeza que deseja excluir a Nota: @Html.DisplayFor(model => model.NumeroNf)? </h4>
    <hr />
    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between">
            <span class="mt-1">Nota Fiscal: </span>
            <div class="justify-content-sm-end d-flex m-0">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Excluir" class="btn " style=" background-color: #82323b; color: #FFF; width: 100px" />
                    <a asp-action="Details" asp-controller="Processos" asp-route-id="@ViewBag.ProcessoId" class="btn btn-dark" style="width: 100px">Voltar</a>
                </form>
            </div>
        </div>
        <dl class="card-body row">
            <div class="col-md-4">
                <dt>
                    Número NF:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NumeroNf)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Data de emissão:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Emissao)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Base Nota
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.BaseNota)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Valor FOB
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ValorFob)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Valor Frete
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ValorFrete)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Valor Seguro
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ValorSeguro)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Valor CIF
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ValorCif)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Peso Líquido:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PesoLiq)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Peso Bruto
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PesoBruto)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Taxa Cambial
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TaxaCambial)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Certificado de Qualidade
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CertificadoQualidade)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Veículo
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Veiculo.Motorista)
                </dd>
            </div>

            <div class="col-md-4">
                <dt>
                    Valor Total
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ValorTotalNota)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Embarque:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EmbarqueRodoviarioId)
                </dd>
            </div>
        </dl>
    </div>
</div>
