@model kaufer_comex.Models.AgenteDeCarga

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Dados do Agente de Cargas</h1>

<h4>Agente de Carga</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomeAgenteCarga" class="control-label"></label>
                <input asp-for="NomeAgenteCarga" class="form-control" />
                <span asp-validation-for="NomeAgenteCarga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-info" asp-action="Index">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
