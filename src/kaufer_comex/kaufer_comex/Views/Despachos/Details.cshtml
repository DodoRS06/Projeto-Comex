@model kaufer_comex.Models.Despacho

@{
	ViewData["Title"] = "Detalhes";
}



<div>
	@if (TempData["MensagemErro"] != null)
	{
		<div class="alert alert-danger" role="alert" align="center">
			@TempData["MensagemErro"]
		</div>
	}
    <div>
        <h3>Processo: @Html.DisplayFor(model => model.Processo.CodProcessoExportacao)</h3>
    </div>
    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between">
            <span class="mt-1"><strong>Despacho:</strong> </span>
        </div>
        <dl class="card-body row">
            <div class="col-md-4">
                <dt>
                    Número DUE:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NumeroDue)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Data DUE:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DataDue)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Data Exportação:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DataExportacao)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Conhecimento Embarque:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DataExportacao)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Data de Conhecimento:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DataConhecimento)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Data da Averbação:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DataAverbacao)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Código do país:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CodPais)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    Parametrização:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Parametrizacao)
                </dd>
            </div>

        </dl>
    </div>
</div>
<div class="form-group " align="center">
	<a asp-action="Edit" asp-route-id="@Model?.Id" class="btn " style=" background-color: #F08433; color: #FFF; width: 100px">Editar</a> |
	<a asp-action="Details" asp-controller="Processos" asp-route-id="@Model.ProcessoId" class="btn btn-dark" style="width: 100px">Voltar</a>
</div>
