@model kaufer_comex.Models.Usuario

@{
	ViewData["Title"] = "Details";
}

<div class="card mb-3">
	<div class="card-header d-flex justify-content-between">
		<span class="mt-1"><strong>USUÁRIO </strong> </span>
		<div class="justify-content-sm-end d-flex m-0">
			<a asp-action="Edit" asp-controller="Usuarios" asp-route-id="@Model.Id" class="btn" style=" background-color: #F08433; color: #FFF; margin-right: 10px">Editar</a>
			<a asp-action="Index" asp-controller="Usuarios" asp-route-id="@Model.Id" class="btn btn-outline-dark">Voltar</a>
		</div>
	</div>
	<dl class="card-body row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.NomeFuncionario)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.NomeFuncionario)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Email)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Email)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.CPF)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CPF)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Perfil)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Perfil)
		</dd>
	</dl>
</div>

