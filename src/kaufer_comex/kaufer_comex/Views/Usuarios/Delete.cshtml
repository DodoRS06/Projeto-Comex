@model kaufer_comex.Models.Usuario

@{
	ViewData["Title"] = "Delete";
}

<div>
	<h4>Você tem certeza que deseja excluir o Usuário:  @Html.DisplayFor(model => model.NomeFuncionario) ?</h4>
	<hr />
	<div class="card mb-3">
		<div class="card-header  d-flex justify-content-between">
			<span class="mt-1"><strong>USUÁRIO:</strong></span>
			<div class="justify-content-sm-end d-flex m-0">
				<form asp-action="Delete">
					<input type="hidden" asp-for="Id" />
					<input type="submit" value="Excluir" class="btn " style=" background-color: #82323b; color: #FFF; width: 100px" />
					<a asp-action="Index" class="btn btn-dark" style="width: 100px">Voltar</a>
				</form>
			</div>
		</div>
		<dl class="card-body row">
			<div class="col-md-4">
				<dt>
					@Html.DisplayNameFor(model => model.NomeFuncionario)
				</dt>
				<dd>
					@Html.DisplayFor(model => model.NomeFuncionario)
				</dd>
			</div>
			<div class="col-md-4">
				<dt>
					@Html.DisplayNameFor(model => model.Email)
				</dt>
				<dd>
					@Html.DisplayFor(model => model.Email)
				</dd>
			</div>
			<div class="col-md-4">
				<dt>
					@Html.DisplayNameFor(model => model.CPF)
				</dt>
			<dd>
				@Html.DisplayFor(model => model.CPF)
			</dd>
			</div>
			<div class="col-md-4">
				<dt>
					@Html.DisplayNameFor(model => model.Perfil)
				</dt>
				<dd>
					@Html.DisplayFor(model => model.Perfil)
				</dd>
			</div>
		</dl>
	</div>
</div>