@model kaufer_comex.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<section class="h-100 gradient-form" style="background-color: #fff; color: #fff;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-6">
                <div class="card rounded-3 text-black" style="background-color: #F08433;">
                    <div class="row g-0">
                        <div class="col-lg-12">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="~/Images/Logo.png" style="width: 185px;" alt="logo">
                                </div>

                                @if (ViewBag.Message != null)
                                {
                                    <div class="alert alert-danger">
                                        @ViewBag.Message
                                    </div>
                                }

                                <form asp-action="Login" class="needs-validation" novalidate>
                                    <h5>LOGIN</h5>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="Email" id="form2Example11" class="form-control" placeholder="E-mail" required />
                                        <label class="form-label" for="form2Example11"></label>
                                        <div class="invalid-feedback">Campo obrigatório</div>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="Senha" type="password" id="form2Example22" class="form-control" placeholder="Senha" required />
                                        <label class="form-label" for="form2Example22"></label>
                                        <div class="invalid-feedback">Campo obrigatório</div>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button data-mdb-button-init data-mdb-ripple-init class="btn btn-block gradient-custom-2 mb-3"
                                                type="submit" style="background-color: #562e64; color: #fff">
                                            Acessar
                                        </button>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Esqueceu sua senha?</p>
                                        <a asp-controller="Usuarios" asp-action="ForgotPassword">clique aqui</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    window.onload = function() {
        var firstInput = document.querySelector("input");
        if (firstInput) {
            firstInput.focus();
        }
    };
</script>