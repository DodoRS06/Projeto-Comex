@model kaufer_comex.Models.Usuario

@{
	ViewData["Title"] = "Edit";
}

<div class="container">
	<br />
	<div class="form-group " align="center">
		<h4>Editar Usuário</h4>
	</div>
	<hr />
	<form asp-action="Edit">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="row">
			<div class="form-group col-md-4">
				<label asp-for="NomeFuncionario" class="control-label"></label>
				<input asp-for="NomeFuncionario" class="form-control" />
				<span asp-validation-for="NomeFuncionario" class="text-danger"></span>
			</div>
			<div class="form-group col-md-4">
				<label asp-for="Email" class="control-label"></label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group col-md-4">
				<label asp-for="Senha" class="control-label"></label>
				<input asp-for="Senha" class="form-control" />
				<span asp-validation-for="Senha" class="text-danger"></span>
			</div>
			<div class="form-group col-md-4">
				<label asp-for="CPF" class="control-label"></label>
				<input asp-for="CPF" class="form-control" id="cpf" />
				<span asp-validation-for="CPF" class="text-danger"></span>
			</div>
			<div class="form-group col-md-4">
				<label asp-for="Perfil" class="control-label"></label>
				<select asp-for="Perfil" class="form-control" asp-items="Html.GetEnumSelectList<Perfil>()"></select>
				<span asp-validation-for="Perfil" class="text-danger"></span>
			</div>
			<div class="form-group " align="center">
				<br />
				<input type="submit" value="Cadastrar" class="btn " style=" background-color: #fd7e14; color: #FFF; width: 100px" />
				<a asp-action="Index" class="btn btn-dark" style="width: 100px">Voltar</a>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
    }
