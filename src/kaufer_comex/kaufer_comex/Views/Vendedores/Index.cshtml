@model IEnumerable<kaufer_comex.Models.Vendedor>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="form-group " align="center">
        <h2>Lista de Vendedores</h2>
    </div>
    <div class="d-flex flex-row-reverse bd-highlight">
        <p>
            <a asp-action="Create" class="btn d-flex flex-row-reverse bd-highlight " style=" background-color: #fd7e14; color: #FFF">Adicionar Vendedor</a>
        </p>
    </div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeVendedor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeVendedor)
            </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn"><img src="~/Images/editar.png" id="Edit" style="height:20px;"></a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn"><img src="~/Images/detail.png" id="Details" style="height:20px; "></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn"><img src="~/Images/excluir.png" id="Details" style="height:20px; "></a>
                    </td>
        </tr>
}
    </tbody>
</table>
</div>