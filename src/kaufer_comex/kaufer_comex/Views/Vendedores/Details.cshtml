@model kaufer_comex.Models.Vendedor

@{
	ViewData["Title"] = "Details";
}
<div>
	@if (TempData["MensagemErro"] != null)
	{
		<div class="alert alert-danger" role="alert" align="center">
			@TempData["MensagemErro"]
		</div>
	}
</div>
<div class="card mb-3">
	<div class="card-header d-flex justify-content-between">
		<span class="mt-1"><strong> VENDEDOR </strong> </span>
		<div class="justify-content-sm-end d-flex m-0">
			<a asp-action="Edit" asp-controller="Vendedores" asp-route-id="@Model.Id" class="btn" style=" background-color: #F08433; color: #FFF; margin-right: 10px">Editar</a>
			<a asp-action="Index" asp-controller="Vendedores" asp-route-id="@Model.Id" class="btn btn-outline-dark">Voltar</a>
		</div>
	</div>
<div>
		<dl class="card-body row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.NomeVendedor)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.NomeVendedor)
		</dd>
	</dl>
</div>
</div>

