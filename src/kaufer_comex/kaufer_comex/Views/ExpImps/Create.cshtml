@model kaufer_comex.Models.ExpImp

@{
    ViewData["Title"] = "Cadastrar Importador/Exportador";
}

<div class="container">
    <br />
    <div class="form-group " align="center">
        <h4>Cadastrar Importador/Exportador</h4>
    </div>

    <hr />
    @*<div class="col-md-4"> *@
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="Sigla" class="control-label"></label>
                <input asp-for="Sigla" class="form-control" />
                <span asp-validation-for="Sigla" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="TipoExpImp" class="control-label"></label>
                <select asp-for="TipoExpImp" class="form-control">
                    <option value="">Selecione...</option>
                    @foreach (var item in Html.GetEnumSelectList<TipoExpImp>())
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="TipoExpImp" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Pais" class="control-label"></label>
                <input asp-for="Pais" class="form-control" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Cep" class="control-label"></label>
                <input asp-for="Cep" type="text" class="form-control"/>
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" type="text" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" type="text" class="form-control" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Contato" class="control-label"></label>
                <input asp-for="Contato" class="form-control" />
                <span asp-validation-for="Contato" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Observacoes" class="control-label"></label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group" align="center">
                <br />
                <input type="submit" value="Cadastrar" class="btn " style=" background-color: #F08433; color: #FFF; width: 100px" />
                <a asp-action="Index" class="btn btn-dark" style="width: 100px">Voltar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
	}
<script>
    window.onload = function () {
        var firstInput = document.querySelector("input");
        if (firstInput) {
            firstInput.focus();
        }
    };
</script>