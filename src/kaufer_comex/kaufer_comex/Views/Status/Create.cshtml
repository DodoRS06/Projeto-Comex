@model kaufer_comex.Models.Status

@{
    ViewData["Title"] = "Create";
}

<div class="container">
	<br />
	<div class="form-group " align="center">
		<h4>Cadastrar Status</h4>
	</div>
	<hr />
	<form asp-action="Create">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	
		   <div align="center">
			<div class="form-group col-md-4" >
				<label asp-for="StatusAtual" class="control-label"></label>
				<input asp-for="StatusAtual" class="form-control" />
				<span asp-validation-for="StatusAtual" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group " align="center">
			<br />
			<input type="submit" value="Cadastrar" class="btn " style=" background-color: #fd7e14; color: #FFF; width: 100px" />
			<a asp-action="Index" class="btn btn-dark" style="width: 100px">Voltar</a>
		</div>
	</form>
</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

