@model kaufer_comex.Models.Despachante

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert" align="center">
            @TempData["MensagemErro"]
        </div>
    }
    <br />
    <div class="form-group " align="center">
        <h4>Cadastrar Despachante</h4>
    </div>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="NomeDespachante" class="control-label"></label>
                <input asp-for="NomeDespachante" class="form-control" />
                <span asp-validation-for="NomeDespachante" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Contato" class="control-label"></label>
                <input asp-for="Contato" class="form-control" />
                <span asp-validation-for="Contato" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group " align="center">
                <br />
                <input type="submit" value="Cadastrar" class="btn " style=" background-color: #fd7e14; color: #FFF; width: 100px" />
                <a asp-action="Index" class="btn btn-dark" style="width: 100px">Voltar</a>
            </div>
        </div>


    </form>
</div>
<script>
    window.onload = function () {
        var firstInput = document.querySelector("input");
        if (firstInput) {
            firstInput.focus();
        }
    };
</script>






@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
	}
