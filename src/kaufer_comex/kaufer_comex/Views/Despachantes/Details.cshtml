@model kaufer_comex.Models.Despachante

@{
	ViewData["Title"] = "Details";
}

<div class="card mb-3">
	<div class="card-header d-flex justify-content-between">
		<span class="mt-1"><strong>DESPACHANTE </strong> </span>
		<div class="justify-content-sm-end d-flex m-0">
			<a asp-action="Edit" asp-controller="Despachantes" asp-route-id="@Model.Id" class="btn" style=" background-color: #F08433; color: #FFF; margin-right: 10px">Editar</a>
			<a asp-action="Index" asp-controller="Despachantes" asp-route-id="@Model.Id" class="btn btn-outline-dark">Voltar</a>
		</div>
	</div>
	<dl class="card-body row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.NomeDespachante):
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.NomeDespachante)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Contato):
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Contato)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Email):
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Email)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Telefone):
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Telefone)
		</dd>
	</dl>
</div>
