@model kaufer_comex.Models.Despachante

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <br />
    <div class="form-group " align="center">
        <h4>Editar Despachante</h4>
    </div>
    <hr />
    <div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomeDespachante" class="control-label"></label>
                <input asp-for="NomeDespachante" class="form-control" />
                <span asp-validation-for="NomeDespachante" class="text-danger"></span>
            </div>
             <div class="form-group " align="center">
                        <br />
                        <input type="submit" value="Editar" class="btn " style=" background-color: #fd7e14; color: #FFF; width: 100px" />
                        <a asp-action="Index" class="btn btn-dark" style="width: 100px">Voltar</a>
                    </div>
        </form>
    </div>
</div>    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
