@model kaufer_comex.Models.Item

@{
    ViewData["Title"] = "Deletar Itens";
}

<div>
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert" align="center">
            @TempData["MensagemErro"]
