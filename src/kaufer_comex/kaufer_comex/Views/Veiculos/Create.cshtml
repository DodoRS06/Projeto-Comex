@model kaufer_comex.Models.Veiculo

@{
	ViewData["Title"] = "Adicionar Veículo";
}

<div class="container">
	@if (TempData["MensagemErro"] != null)
	{
		<div class="alert alert-danger" role="alert" align="center">
			@TempData["MensagemErro"]
		</div>
	}
	<br />
	<div class="form-group " align="center">
		<h4>Cadastrar Veículo</h4>
	</div>
	<hr />
	<form asp-action="Create">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="row">
			<input type="hidden" id="ProcessoId" name="ProcessoId" value="@ViewData["ProcessoId"]" />
		<div class="form-group col-md">
			<label asp-for="Placa" class="control-label"></label>
			<input asp-for="Placa" class="form-control" />
			<span asp-validation-for="Placa" class="text-danger"></span>
		</div>
		<div class="form-group col-md">
			<label asp-for="Motorista" class="control-label"></label>
			<input asp-for="Motorista" class="form-control" />
			<span asp-validation-for="Motorista" class="text-danger"></span>
		</div>
		</div>
		<div class="form-group " align="center">
			<br />
			<input type="submit" value="Cadastrar" class="btn " style=" background-color: #F08433; color: #FFF; width: 100px" />
			<a asp-action="Details" asp-controller="Processos" asp-route-id="@ViewContext.RouteData.Values["id"]" class="btn btn-dark" style="width: 100px">Voltar</a>
		</div>
	</form>
</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

	<script>
		window.onload = function () {
			var firstInput = document.querySelector("input");
			if (firstInput) {
				firstInput.focus();
			}
		};
	</script>

	}
