@model kaufer_comex.Models.Veiculo

@{
	ViewData["Title"] = "Create";
}

<div class="container">
	<br />
	<div class="form-group " align="center">
		<h4>Cadastrar Veículo</h4>
	</div>
	<hr />
	<form asp-action="Create">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="Placa" class="control-label"></label>
			<input asp-for="Placa" class="form-control" />
			<span asp-validation-for="Placa" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Motorista" class="control-label"></label>
			<input asp-for="Motorista" class="form-control" />
			<span asp-validation-for="Motorista" class="text-danger"></span>
		</div>
		<div class="form-group " align="center">
			<br />
			<input type="submit" value="Cadastrar" class="btn " style=" background-color: #fd7e14; color: #FFF; width: 100px" />
			<a asp-action="Index" class="btn btn-dark" style="width: 100px">Voltar</a>
		</div>
	</form>
</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
