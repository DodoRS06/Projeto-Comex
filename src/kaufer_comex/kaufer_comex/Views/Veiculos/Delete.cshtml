@model kaufer_comex.Models.Veiculo

@{
    ViewData["Title"] = "Deletar Veículo";
}


<div>   
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert" align="center">
            @TempData["MensagemErro"]
        </div>
    }
    <h4>Você tem certeza que deseja excluir o Veículo referente ao Processo  @Html.DisplayFor(model => model.Processo.CodProcessoExportacao) ? </h4>
    <hr />
    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between">
            <span class="mt-1"><strong>VEICULO</strong> </span>
            <div class="justify-content-sm-end d-flex m-0">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Excluir" class="btn " style=" background-color: #82323b; color: #FFF; width: 100px" />
                    <a asp-action="Details" asp-controller="Processos" asp-route-id="@Model.ProcessoId" class="btn btn-dark" style="width: 100px">Voltar</a>
                </form>
            </div>
        </div>
        <dl class="card-body row">
            <div class="col-md-4">
                <dt>
                    @Html.DisplayNameFor(model => model.Placa)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Placa)
                </dd>
            </div>
            <div class="col-md-4">
                <dt>
                    @Html.DisplayNameFor(model => model.Motorista)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Motorista)
                </dd>
            </div>
        </dl>
    </div>
</div>