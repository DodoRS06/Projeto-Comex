@model kaufer_comex.Models.FornecedorServico

@{
    ViewData["Title"] = "Cadastrar fornecedor de serviço";
}

<div class="container">
    <br />
    <div class="form-group " align="center">
        <h4>Cadastrar fornecedor de serviço</h4>
    </div>
    <hr />
    @* <div class="col-md-4"> *@
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="TipoServico" class="control-label"></label>
                <select asp-for="TipoServico" class="form-control" asp-items="Html.GetEnumSelectList<TipoServico>()"></select>
                <span asp-validation-for="TipoServico" class="text-danger"></span>
            </div>
            <div class="form-group" align="center">
                <br />
                <input type="submit" value="Cadastrar" class="btn " style=" background-color: #F08433; color: #FFF; width: 100px" />
                <a asp-action="Index" class="btn btn-dark" style="width: 100px">Voltar</a>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
