@model kaufer_comex.Models.Destino

@{
	ViewData["Title"] = "Editar Destino";
}

<div class="container">
	@if (TempData["MensagemErro"] != null)
	{
		<div class="alert alert-danger" role="alert" align="center">
			@TempData["MensagemErro"]
		</div>
	}
	<br />
	<div class="form-group " align="center">
		<h4>Editar Destino</h4>
	</div>
	<hr />
	<div class="row justify-content-center">
		<div class="col-md-4" align="center">

		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="NomePais" class="control-label"></label>
				<input asp-for="NomePais" class="form-control" />
				<span asp-validation-for="NomePais" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="form-group " align="center">
					<br />
					<input type="submit" value="Cadastrar" class="btn " style=" background-color: #F08433; color: #FFF; width: 100px" />
					<a asp-action="Index" class="btn btn-dark" style="width: 100px">Voltar</a>
				</div>
			</div>
		</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
