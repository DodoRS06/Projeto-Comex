@model kaufer_comex.Models.ValorProcesso

@{
	ViewData["Title"] = "Edit";
}

<div class="container">
	<br />
	<div class="form-group " align="center">
		<h4>Editar Valores do Processo</h4>
	</div>
	<hr />
	<div class="row justify-content-center">
		<div class="col-md-4" align="center">
	<form asp-action="Edit">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="ValorExw" class="control-label"></label>
			<input asp-for="ValorExw" class="form-control" />
			<span asp-validation-for="ValorExw" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="ValorFobFca" class="control-label"></label>
			<input asp-for="ValorFobFca" class="form-control" />
			<span asp-validation-for="ValorFobFca" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="FreteInternacional" class="control-label"></label>
			<input asp-for="FreteInternacional" class="form-control" />
			<span asp-validation-for="FreteInternacional" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="SeguroInternaciona" class="control-label"></label>
			<input asp-for="SeguroInternaciona" class="form-control" />
			<span asp-validation-for="SeguroInternaciona" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="ValorTotalCif" class="control-label"></label>
			<input asp-for="ValorTotalCif" class="form-control" readonly />
			<span asp-validation-for="ValorTotalCif" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Moeda" class="control-label"></label>
			<select asp-for="Moeda" class="form-control" asp-items="Html.GetEnumSelectList<Moeda>()"></select>
			<span asp-validation-for="Moeda" class="text-danger"></span>
		</div>
	    <div class="form-group ">
			<label asp-for="ProcessoId" class="control-label"></label>
			<select asp-for="ProcessoId" class="form-control" asp-items="ViewBag.ProcessoId">
			<option value="">Selecione o código de processo</option>
			</select>
		</div>
		<div class="form-group " align="center">
			<br />
			<input type="submit" value="Editar" class="btn " style=" background-color: #fd7e14; color: #FFF; width: 100px" />
			<a asp-action="Index" class="btn btn-dark" style="width: 100px">Voltar</a>
				</div>
			</form>
		</div>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script>
		$(document).ready(function () {
			$('#ValorExw, #ValorFobFca, #FreteInternacional, #SeguroInternaciona').on('input', function () {
				var valorExw = parseFloat($('#ValorExw').val()) || 0;
				var valorFobFca = parseFloat($('#ValorFobFca').val()) || 0;
				var freteInternacional = parseFloat($('#FreteInternacional').val()) || 0;
				var seguroInternacional = parseFloat($('#SeguroInternaciona').val()) || 0;

				var valorTotalCif = valorExw + valorFobFca + freteInternacional + seguroInternacional;
				$('#ValorTotalCif').val(valorTotalCif.toFixed(2));
			});
		});
	</script>
}
