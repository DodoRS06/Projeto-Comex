@model kaufer_comex.Models.ValorProcesso

@{
	ViewData["Title"] = "Delete";
}
<div>
	<h4>Você tem certeza que deseja excluir os Valores do Processo:  @Html.DisplayFor(model => model.Processo.CodProcessoExportacao)?</h4>
	<hr />
