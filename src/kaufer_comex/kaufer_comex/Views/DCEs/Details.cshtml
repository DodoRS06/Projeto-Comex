@model kaufer_comex.Models.DCEView

@{
    ViewData["Title"] = "Detalhes";
}
@if (Model.DCEs.Count > 0)
{
    <div>
        <h3>Detalhes da DCE </h3>
        <hr />
        @foreach (var item in Model.DCEs)
        {
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between">
                    <span class="mt-1">DCE:</span> 
                    <div class="justify-content-sm-end d-flex">
                        @*  <a asp-controller="DCEs" asp-action="Edit" asp-route-id="@item.Id" class="btn"><img src="~/Images/editar.png" id="Edit" style="height:20px;"></a> *@
                    </div>
                </div>
                <dl class="card-body row">
                    <div class="col-md-4">
                        <dt>
                            Despesa:
                        </dt>
                        <dd>
                            @ViewBag.despesa
                        </dd>
                    </div>
                    <div class="col-md-4">
                        <dt>
                            Fornecedor:
                        </dt>
                        <dd>
                            @ViewBag.fornecedor
                        </dd>
                    </div>
                    <div class="col-md-4">
                        <dt>
                            Valor:
                        </dt>
                        <dd>
                            @item.Valor
                        </dd>
                    </div>
                    <div class="col-md-4">
                        <dt>
                            Observação:
                        </dt>
                        <dd>
                            @item.Observacao
                        </dd>
                    </div>
                </dl>

            </div>
        }
        <div class="form-group " align="center">
            <a asp-action="Details" asp-controller="Processos" asp-route-id="@ViewBag.ProcessoId" class="btn btn-dark" style="width: 100px">Voltar</a>
        </div>
    </div>
}
