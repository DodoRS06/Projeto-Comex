@model kaufer_comex.Models.EmbarqueRodoviario

@{
	ViewData["Title"] = "Excluir Embraque";
}

<div>
	<h4>Você tem certeza que deseja excluir o embarque?</h4>

	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Transportadora)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Transportadora)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DataEmbarque)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.DataEmbarque)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.TransitTime)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.TransitTime)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ChegadaDestino)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ChegadaDestino)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.AgenteDeCargaId)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.AgenteDeCarga.NomeAgenteCarga)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ProcessoId)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Processo.CodProcessoExportacao)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Excluir" class="btn " style=" background-color: #82323b; color: #FFF; width: 100px" />
		<a asp-action="Details" asp-controller="Processos" asp-route-id="@Model.ProcessoId" class="btn btn-dark" style="width: 100px">Voltar</a>
	</form>
</div>